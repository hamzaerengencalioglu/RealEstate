@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Advertisement List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Advertisement Title</th>
                                <th scope="col">City</th>
                                <th scope="col">County</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                                <th scope="col">Type</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                                <th scope="col">See On Website</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.productID</th>
                                    <td>@item.title</td>
                                    <td>@item.city</td>
                                    <td>@item.district</td>
                                    <td>@item.categoryName</td>
                                    <td>@item.price</td>
                                    <td>@item.type</td>
                                    <td>
                                        <a href="/Product/DeleteProduct/@item.productID"
                                           class="btn btn-outline-danger">Delete</a>
                                    </td>
                                    <td>
                                        <a href="/Product/UpdateProduct/@item.productID"
                                           class="btn btn-outline-success">Update</a>
                                    </td> 
                                    <td>
                                        <a href="/Product/ProductDetail/@item.productID"
                                           class="btn btn-outline-primary">See On Website</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct" class="btn btn-outline-info">Add New Listing</a>
                </div>
            </div>
        </div>
    </div>
</div>

