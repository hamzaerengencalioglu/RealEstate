@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">New Listing Addition Page</h6>
                <form method="post">

                    <label>Listing Title</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <label>City</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <label>Count</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <label>Category</label>
                    @Html.DropDownListFor(x=>x.categoryid,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                    <br />

                    <label>Price</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <label>Type</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <label>Cover Photo</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <label>Listing Full Address</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />

                    <button class="btn btn-primary">Save Listing</button>
                </form>
            </div>
        </div>
    </div>
</div>

